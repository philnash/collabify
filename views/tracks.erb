<% if @tracks.any? %>
  <h2>Search results</h2>
  <ol class="tracks">
    <% @tracks.each do |track| %>
      <li>
        <h3><%= track.name %></h3>
        <p><%= track.artists.map { |a| a.name }.join(', ') %></p>
        <form action="/add" method="post">
          <input type="hidden" name="uri" value="<%= track.uri %>">
          <input type="hidden" name="track" value="<%= track.name %>">
          <input type="hidden" name="artist" value="<%= track.artists.map { |a| a.name }.join(', ') %>">
          <button type="submit">+</button>
        </form>
      </li>
    <% end %>
  </ol>
<% else %>
  <p>No tracks found.</p>
<% end %>
